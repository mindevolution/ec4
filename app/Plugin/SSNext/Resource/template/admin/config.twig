
{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'ss_next.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'ss_next.admin.config.sub_title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}

{% endblock stylesheet %}

{% block main %}
    <form role="form" method="post" id="ss_next_config_form">

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <span>
                                {{ 'ss_next.admin.config.header'|trans }}
                            </span>
                        </div>
                        <div class="card-body">
                            {#
                            <div class="row col-12">
                                <div class="col-3">
                                    <span>{{ 'ss_next.admin.config.is_product_code.name'|trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.is_product_code) }}
                                    {{ form_errors(form.is_product_code) }}
                                </div>
                            </div>
                            #}
                            <div class="row col-12">
                                <div class="col-3">
                                    <span>{{ 'ss_next.admin.config.api_key.name'|trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.api_key) }}
                                    {{ form_errors(form.api_key) }}
                                </div>
                            </div>

                            <div class="row col-12">
                                <div class="col-3">
                                    <span>{{ 'ss_next.admin.config.order_mail.name'|trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.order_mail) }}
                                    {{ form_errors(form.order_mail) }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a style="color: white;" class="c-beseLink" href="{{ url('admin_store_plugin') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'ss_next.admin.config.back'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'ss_next.admin.config.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}