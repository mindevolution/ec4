{% extends 'default_frame.twig' %}

{% block javascript %}
<script type="text/javascript">
   $(function(){
       $('#checkout').submit();
   });
</script>
{% endblock javascript %}

{% set body_class = 'cart_page' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>{{ '決済処理中' }}</h1>
        </div>
    </div>
<div class="ec-cartRole">
    <div class="ec-cartRole__progress">
    </div>
</div>

<form id="checkout" method="POST" accept-charset="SHIFT-JIS" action="{{ post_to }}" />
    {% for key, item in param %}
        {% if item is iterable %}
            {% for index, value in item %}
                {% for vkey, vitem in value %}
                    <input type="hidden" name="{{ vkey }}[]" value="{{ vitem }}" />
                {% endfor %}
            {% endfor %}
        {% else %}
            <input type="hidden" name="{{ key }}" value="{{ item }}" />
        {% endif %}
    {% endfor %}
</form>

{% endblock %}
